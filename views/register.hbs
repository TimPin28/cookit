<html>
    <head>
        <title>Register</title>
        <script src = "js/Register.js"></script>
        <link rel = "stylesheet" type = "text/css" media = "all" href = "css/register.css">
        <link rel = "stylesheet" type = "text/css" media = "all" href = "css/universal_styles.css">
    </head>

    <body>

        {{>messages}}
        <div id="register-container">
            <img id="logo" src="images/Icon.png" />
            <form id="register-form" action ="/register" method="POST">
                <div>
                    <br>
                    <input type="text" placeholder="Username" id ="username" name="username" size = 30>
                    <br><br>
                    <input type="email" placeholder ="Email" id="email" name="email" size=30>
                    <br><br>
                    <input type="password" placeholder="Password" id="password" name="password" size = 30>
                    <br><br>
                    <input type="password" placeholder="Confirm Password" id="confirm-password" name="confirm-password" size = 30>

                    <br><br>

                    <input type ="submit" id="button" value = "Register">
                </div>
            </form>
        </div>
    </body>
</html>