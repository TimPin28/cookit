<div id="content">
    <div id="left">
        <h1>{{post.title}}</h1>

        {{!-- Add css for both! --}}
        {{#if isauthor}}
        <a href="/delete-post"><h2>delete</h2></a>
        <a href="/edit-post-form/{{post._id}}"><h2>edit</h2></a>
        {{/if}}

        <h3 class="tags">{{post.tags}}</h3>
        <a href="/profile/{{post.author}}"><h3>{{post.author}}</h3></a>
        <h3 class="datetime">{{post.createdAt}}</h3>
        
        <br><br><br>

        <h2>Ingredients</h2>
        <div class="recipe-content">
             {{post.ingredients}}
        </div>

        <br><br><br>

        <h2>Instructions</h2>
        <div class="recipe-content">
            {{post.instructions}}
        </div>

        </div>

        <div id="right">
        <img src="../{{post.image}}"/>
        </div>
</div>

<form action = "/comment-post" method="post" onSubmit = "" id="createcomment">
    <div>
        <textarea form="createcomment" name="comment_text" placeholder = "Create Comment" id="createcommentbox" rows="8" cols="75"></textarea>
        <br><br>
        <input type = submit id="button" value = "Submit Comment">
    </div>
</form>

