<div class="header">
    <a href="/"><img class="home-logo" src="images/Icon.png"></a>
    <div class="main-nav">
        <a href="/create"><div class="main-nav-button">Create</div></a>
        <a href="/settings"><div class="main-nav-button">Settings</div></a>
    </div>
    <div class="search-container">
        <form action = "/search-post" method="post" id="searchPost">
            <input type="text" placeholder="Search for a recipe!" name="searchPost">
            <button type="submit">
                <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                    <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                </svg>
            </button>
        </form>
        
    </div>

    <div class="side-nav">
        {{#if loggedin}}
        <a href="/profile"><div class="side-nav-button">{{loggeduser}}</div></a>
        <a href="/logout"><div class="side-nav-button">Logout</div></a>
        {{else}}
        <a href="/login"><div class="side-nav-button">Login</div></a>
        <a href="/register"><div class="side-nav-button">Register</div></a>
        {{/if}}

    </div>
</div>